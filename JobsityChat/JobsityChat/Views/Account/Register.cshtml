@model Model.User
@{
    ViewBag.Title = "Register";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Create a new account.</h2>
</hgroup>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="row">
        <div class="col-lg-3">
            <fieldset class="text-muted">
                <ol>
                    <li>
                        @Html.LabelFor(m => m.Username)
                        @Html.TextBoxFor(m => m.Username, new { id = "username", @class = "search-input form-control input-sm" })
                        @Html.ValidationMessageFor(m => m.Username)
                    </li>
                    <li>
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { id = "pass", @class = "search-input form-control input-sm" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </li>
                    <li>
                        @Html.Label("Confirm Password")
                        @Html.Password("confirm", null, new { id = "confirm", @class = "search-input form-control input-sm" }); 
                    </li>
                </ol>
                <input type="submit" value="Log in" class="btn btn-primary submit-btn btn-sm pull pull-right" />
            </fieldset>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
