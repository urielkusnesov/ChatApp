@model Model.User

@{
    ViewBag.Title = "Log in";
}

<meta name="viewport" content="width=device-width" />
<title>Log in</title>

<hgroup class="title text-muted">
    <h1>@ViewBag.Title.</h1>
</hgroup>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="row">
        <div class="col-lg-3">
            <fieldset class="text-muted">
                <ol>
                    <li>
                        @Html.LabelFor(m => m.Username)
                        @Html.TextBoxFor(m => m.Username, new { @class = "search-input form-control input-sm" })
                        @Html.ValidationMessageFor(m => m.Username)
                    </li>
                    <li>
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "search-input form-control input-sm" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </li>
                </ol>
                <input type="submit" value="Log in" class="btn btn-primary submit-btn btn-sm pull pull-right" />
            </fieldset>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
